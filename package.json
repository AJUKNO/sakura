{
  "name": "@ajukno/sakura",
  "version": "0.1.1",
  "description": "Tool for defining and managing custom elements",
  "author": "AJUKNO",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ajukno/sakura.git"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "CHANGELOG.md",
    "README.md",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build-fast": "tsup src/index.ts --format cjs,esm",
    "build": "tsup src/index.ts --format cjs,esm --dts-resolve",
    "build:watch": "tsup src/index.ts --format cjs,esm --watch",
    "format": "prettier --write ./src",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "test": "vitest run"
  },
  "keywords": [
    "typescript",
    "library",
    "tsup",
    "eslint",
    "prettier",
    "vitest",
    "changesets",
    "changeset"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@eslint/js": "^9.12.0",
    "@types/eslint__js": "^8.42.3",
    "@vitest/coverage-v8": "^2.1.2",
    "eslint": "^9.12.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.3.3",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1",
    "vitest": "^2.1.2"
  }
}
