{%- comment -%}
  Renders a search form

  Accepts:
    - search: The search object

  Usage:
    {%- render 'search-form',
        search: search
    -%}
{%- endcomment -%}

<form class='w-full flex gap-3' action='{{ routes.search_url }}'>
  <input
    class='w-full border-[1px] text-lg font-light bg-white/50 border-stone-300 rounded-md px-6 py-3'
    type='text'
    placeholder='Search'
    name='q'
    value='{{ search.terms | escape }}'
  >
  <button
    type='submit'
    class='relative group px-6 disabled:pointer-events-none rounded-lg bg-stone-900 disabled:bg-stone-900/70 text-xs tracking-widest uppercase text-stone-300'
  >
    <span>Search</span>
  </button>
</form>
